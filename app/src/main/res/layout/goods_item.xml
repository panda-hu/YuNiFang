<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/item_goods_layout">

    <ImageView
        android:id="@+id/item_goods_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/default_goods"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/item_goods_info"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="--------------------------------"
        android:textColor="#848181"
        android:textSize="10sp"
        android:layout_marginTop="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >

        <TextView
            android:id="@+id/item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="¥ 00.00"
            android:textColor="#EA2000" />

        <TextView
            android:id="@+id/item_goods_old_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="¥ 00.00"
            android:textColor="#848181"
            />
    </LinearLayout>

</LinearLayout>