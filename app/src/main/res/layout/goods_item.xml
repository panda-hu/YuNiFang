<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:id="@+id/item_goods_image"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/item_goods_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="镇店之宝|美白嫩肤矿物\n蚕丝面膜7片"
        android:textColor="#848181" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 39.90"
            android:textColor="#EA2000" />

        <TextView
            android:id="@+id/item_goods_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="¥ 39.90"
            android:textColor="#848181" />
    </RelativeLayout>

</LinearLayout>